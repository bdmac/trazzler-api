require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('trazzler-api', '0.1.7') do |p|
  p.author = 'Brian McManus'
  p.email = 'bdmac97@gmail.com'
  p.summary = 'Simple wrapper for the Trazzler API.'
  p.description = 'The Trazzler API exposes RESTful interfaces for accessing trip page and user data.'
  p.url = 'http://github.com/bdmac/trazzler-api'
  p.runtime_dependencies = ['httparty', 'json', 'hashie']
  p.development_dependencies = ['shoulda']
end